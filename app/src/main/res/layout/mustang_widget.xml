<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.MacheWidget.AppWidget.Container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:theme="@style/Theme.MacheWidget.AppWidgetContainer"
    android:background="@color/black"
    android:id="@+id/thewidget">

    <RelativeLayout
        android:id="@+id/leftside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/mache_logo" />

        <ImageView
            android:id="@+id/leftanchor"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@id/logo"
            android:background="@drawable/filler" />

        <include layout="@layout/leftside_info" />

    </RelativeLayout>

    <include layout="@layout/rightside_top"/>

    <include layout="@layout/mustang_image"/>

    <include layout="@layout/rightside_bottom"/>

</RelativeLayout>
